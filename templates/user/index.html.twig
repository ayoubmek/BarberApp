
<h1>User List</h1>

<a href="{{ path('user_new') }}" class="btn btn-primary mb-3">Create New User</a>

<table class="table table-bordered">
    <thead>
        <tr> 
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>
                {% if user.image %}
                    <img src="{{ asset('assets/media/avatars/' ~ user.image) }}" width="60" height="60" class="rounded-circle" />
                {% else %}
                    <small>No image</small>
                {% endif %}
            </td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.phone }}</td>
            <td>
                <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Show</a>
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>

                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="7">No users found</td></tr>
    {% endfor %}
    </tbody>
</table>

